<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tonyguyot.github.io.acronym" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AcronymAppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AcronymAppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".AcronymService"
            android:exported="false" >
        </service>

        <provider
            android:name=".provider.AcronymProvider"
            android:authorities="io.github.tonyguyot.acronym.provider"
            android:enabled="true"
            android:exported="false" >
        </provider>
    </application>

</manifest>
